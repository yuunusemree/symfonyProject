<form method="post" action="{{ path('admin_book_delete', {'id': book.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ book.id) }}">
    <div class="col-md-2">
        <button class="btn-danger" style="float: left; margin-top: 10px; margin-left: -10px">Delete</button>
    </div>
</form>
