{% extends 'adminbase.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}
<!-- ============================================================== -->
<!-- Page wrapper  -->
<!-- ============================================================== -->
<div class="page-wrapper">
    <!-- ============================================================== -->
    <!-- Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-5 align-self-center">
                <h4 class="page-title">Reservations Page</h4>
            </div>
            <div class="col-7 align-self-center">
                <div class="d-flex align-items-center justify-content-end">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item">
                                <a href="/home">Home</a>
                            </li>
                            <li class="breadcrumb-item active" aria-current="page">Reservations</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- End Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- Container fluid  -->
    <!-- ============================================================== -->
    <div class="container-fluid">
        <!-- ============================================================== -->
        <!-- Start Page Content -->
        <!-- ============================================================== -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">

    <h2 class="page-title">Reservation List</h2>

    <table class="table">
        <thead>
            <tr>
                <th>User</th>
                <th>Book</th>
                <th>Name</th>
                <th>Surname</th>
                <th>Checkin</th>
                <th>Checkout</th>
                <th>Days</th>
                <th>Note</th>
                <th>Status</th>
                <th>Created_at</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reservation in reservations %}
            <tr>
                <td>
                    <a href="{{ path('admin_user_show', {'id': reservation.userid}) }}">{{ reservation.uname }}</a>
                </td>
                <td>
                    <a href="{{ path('admin_book_show', {'id': reservation.bookid}) }}">{{ reservation.oname }}</a>
                </td>
                <td>{{ reservation.name }}</td>
                <td>{{ reservation.surname }}</td>
                <td>{{ reservation.checkin ? reservation.checkin | date('m-d-Y') : '' }}</td>
                <td>{{ reservation.checkout ? reservation.checkout | date('m-d-Y') : '' }}</td>
                <td>{{ reservation.days }}</td>
                <td>{{ reservation.note }}</td>
                <td>{{ reservation.status }}</td>
                <td>{{ reservation.created_at ? reservation.created_at | date('m-d-Y') : '' }}</td>
                <td>
                    <button type="button" class="btn-block btn-warning"><a href="{{ path('admin_reservation_show', {'id': reservation.id}) }}">Show</a></button>
                    <button type="button" class="btn-block btn-warning"><a href="{{ path('admin_reservation_edit', {'id': reservation.id}) }}">Edit</a></button>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="16">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- End PAge Content -->
        <!-- ============================================================== -->
        <!-- ============================================================== -->
        <!-- Right sidebar -->
        <!-- ============================================================== -->
        <!-- .right-sidebar -->
        <!-- ============================================================== -->
        <!-- End Right sidebar -->
        <!-- ============================================================== -->
    </div>
    <!-- ============================================================== -->
    <!-- End Container fluid  -->
    <!-- ============================================================== -->
    {% endblock %}

